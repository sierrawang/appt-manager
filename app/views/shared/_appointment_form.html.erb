<%= form_for(@appointment) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :title, placeholder: "Appointment title?" %>
    <%= f.text_area :appt_time, placeholder: "Appointment time?" %>
  </div>
  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>