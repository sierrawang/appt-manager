<%= form_for(@user_comment) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Write comment..." %>
    <%= f.label :appointment_id %>
    <%= f.select :appointment_id, options_for_select(available_appts) %>
  </div>
  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>